
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Menu</title>
    <style type="text/css">
        /*鼠标样式*/
         li{cursor:pointer;
             height: 20px;
         }

        /*一级菜单样式*/
        .first {
            width: 100px;
            background: #ff0000;
            padding-left: 20px;
            transition: height 2s;
            -mov-transition: height 2s;
            -webkit-transiton: height 2s;
        }
            .first:hover {
                height: 100px;
            }
                .first:hover .second {
                    display: block;
                }
        /*二级菜单样式*/
        .second {
            display: none;
            width: 100px;
            background: #00ff00;
            padding-left: 10px;
            transition: height 2s;
            -mov-transition: height 2s;
            -webkit-transiton: height 2s;
        }
            .second:hover {
                height: 80px;
            }
                .second:hover .third {
                    display: block;
                }
        /*三级菜单样式*/
        .third {
            display: none;
            width: 100px;
            background: #0000ff;
            padding-left: 10px;
            transition: height 2s;
            -mov-transition: height 2s;
            -webkit-transiton: height 2s;
        }
        .third:hover {
                height: 60px;
        }
    </style>
</head>
    <body>
        @RenderBody()
        <div class="menu">
            <ul class="first">
                <li>
                    一级导航
                    <ul class="second">
                        <li>二级导航</li>
                        <li>
                            二级导航
                            <ul class="third">
                                <li>
                                    三级导航
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
            </ul> 
            <ul class="first">
                <li>
                    一级导航
                    <ul class="second">
                        <li>
                            二级导航
                            <ul class="third">
                                <li>
                                    三级导航
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
            </ul> 
        </div>
    </body>
</html>
